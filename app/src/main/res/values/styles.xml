<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="EditTextHint" parent="Widget.Design.TextInputLayout">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="colorSecondaryVariant">@color/colorPrimary</item>
        <item name="colorPrimary">@color/colorPrimary</item> // Activated State
        <item name="colorOnSurface">@color/colorPrimary</item> // Normal State
    </style>

    <style name="ExtendedToolbar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="elevation">15dp</item>
    </style>

    <style name="SearchViewTheme" parent="Widget.AppCompat.SearchView">
        <item name="android:background">@drawable/rounded_corner_white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="elevation">16dp</item>
        <item name="queryBackground">@android:color/transparent</item>
    </style>

    <style name="SpinnerTheme" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/spinner_background</item>
        <item name="android:popupBackground">@color/colorBlack</item>
    </style>
    <style name="SpinnerColors">
        <item name="android:popupBackground">@color/colorBlack</item>
    </style>
    <style name="TextWithShadow">
        <item name="android:paddingLeft">4px</item>
        <item name="android:paddingBottom">4px</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textSize">12sp</item>
        <item name="android:shadowColor">@color/colorPrimary</item>
        <item name ="android:shadowDx">-2</item>
        <item name ="android:shadowDy">-2</item>
        <item name ="android:shadowRadius">0.001</item>
    </style>

    <style name="GamelistDetailTitles">
        <item name="android:paddingLeft">4px</item>
        <item name="android:paddingBottom">4px</item>
        <item name="android:textColor">@color/colorSecondaryLight</item>
        <item name="android:alpha"> 0.7</item>
        <item name="android:textSize">20sp</item>
        <item name="android:shadowColor">@color/colorSecondary</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name ="android:shadowDx">-2</item>
        <item name ="android:shadowDy">-2</item>
        <item name ="android:shadowRadius">0.001</item>
    </style>
</resources>