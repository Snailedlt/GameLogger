<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.profilside.ui.mygamelist.MygamelistFragment"
        android:label="@string/title_my_list"
        tools:layout="@layout/fragment_gamelist" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.profilside.ui.profile.ProfileFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.profilside.ui.gamesearch.GamesearchFragment"
        android:label="@string/title_add_game"
        tools:layout="@layout/fragment_notifications" />

    <!-- overflow_menu -->
    <fragment
        android:id="@+id/settings"
        android:name="com.example.profilside.ui.settings.SettingsFragment"
        android:label="@string/settings"
        tools:layout="@layout/fragment_settings" />

    <fragment
        android:id="@+id/about"
        android:name="com.example.profilside.ui.about.AboutFragment"
        android:label="@string/about"
        tools:layout="@layout/fragment_about" />
</navigation>