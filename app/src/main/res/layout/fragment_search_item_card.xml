<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="game"
            type="com.example.gamelogger.classes.Game" />
        <variable
            name="viewModel"
            type="com.example.gamelogger.ui.gamesearch.GamesearchViewModel" />
        <import type="android.view.View"/>
    </data>
    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/game_card_view"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="10dp"
        card_view:cardBackgroundColor="#FFFFFF"
        >
        <RelativeLayout
            android:id="@+id/cardlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="0dp">
            <ImageView
                android:id="@+id/gamePicture"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:maxWidth="90dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:cropToPadding="true"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                app:imageUrl="@{game.img}"
                tools:src="@tools:sample/backgrounds/scenic"
                />
            <TextView
                android:id="@+id/game_title"
                android:layout_width="wrap_content"
                android:maxWidth="250dp"
                android:layout_height="wrap_content"
                android:maxHeight="45dp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/gamePicture"
                android:paddingTop="4dp"
                android:paddingHorizontal="10dp"
                android:textSize="17sp"
                android:text="@{game.title}"
                tools:text="AVeryLongGameTitle: Return of the Title"
                />
            <TextView
                android:id="@+id/game_platform"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_below="@+id/game_title"
                android:layout_alignStart="@+id/game_title"
                android:paddingHorizontal="11dp"
                android:paddingVertical="5dp"
                android:textSize="20sp"
                android:text="@{game.plattform}"
                android:textStyle="bold"
                tools:text="PS4"
                />
            <TextView
                android:id="@+id/game_releasedate"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_toEndOf="@+id/game_platform"
                android:layout_alignBaseline="@id/game_platform"
                android:paddingHorizontal="5dp"
                android:textSize="20sp"
                android:text="@{game.released}"
                tools:text="2020"
                />
            <ImageButton
                android:id="@+id/added_button"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:adjustViewBounds="true"
                android:cropToPadding="false"
                android:scaleType="fitCenter"
                android:visibility="@{game.gameadded ? View.VISIBLE : View.GONE}"
                android:padding="15dp"
                android:src="@drawable/gamestate_done"
                style="?android:buttonBarButtonStyle"
                android:contentDescription="@string/addedbutton" />

            <ImageButton
                android:id="@+id/add_button"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:adjustViewBounds="true"
                android:cropToPadding="false"
                android:scaleType="fitCenter"
                android:padding="15dp"
                android:src="@drawable/searchgame_add"
                style="?android:buttonBarButtonStyle"
                android:contentDescription="@string/addbutton" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</layout>