<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/game_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="5dp"
    card_view:cardBackgroundColor="#FFFFFF"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="0dp">

        <ImageView
            android:id="@+id/gamePicture"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:cropToPadding="false"
            android:paddingHorizontal="0dp"
            android:src="@drawable/game_hades"
            />
        <TextView
            android:id="@+id/game_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/gamePicture"
            android:paddingHorizontal="10dp"
            android:textSize="27sp"
            android:text="Hades"
            />
        <TextView
            android:id="@+id/game_platform"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/game_title"
            android:layout_alignStart="@+id/game_title"
            android:paddingHorizontal="11dp"
            android:textSize="20sp"
            android:text="PC"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/game_releasedate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/game_platform"
            android:layout_alignBaseline="@id/game_platform"
            android:paddingHorizontal="5dp"
            android:textSize="20sp"
            android:text="2020"
            />

        <ImageView
            android:id="@+id/gamestateicon_done"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@id/gamestateicon_playing"
            android:adjustViewBounds="true"
            android:cropToPadding="false"
            android:paddingHorizontal="0dp"
            android:padding="15dp"
            android:src="@drawable/gamestate_done_grey"
            />
        <ImageView
            android:id="@+id/gamestateicon_playing"
            android:layout_width="70dp"
            android:padding="15dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:cropToPadding="false"
            android:paddingHorizontal="0dp"
            android:src="@drawable/gamestate_playing"
            />


    </RelativeLayout>


</androidx.cardview.widget.CardView>